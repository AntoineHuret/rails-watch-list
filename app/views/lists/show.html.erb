<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= @list.name %></h1>
    <%= link_to edit_list_path(@list.id), class: 'btn btn-light btn-sm border' do %>
      <i class="fa fa-pencil"></i> Edit this list
    <% end %>

    <%= link_to new_list_bookmark_path(@list) do %>
    <i class="fa-solid fa-plus"></i> Add a BOOKMARK
    <% end %>

  <%= link_to lists_path do %>
    <i class="fa-solid fa-arrow-rotate-left"></i> Back to list
  <% end %>
  <br>
  <div>
    <% @list.movies.each do |movie| %>
     <%= movie.title %>
     <% end %>
  </div>

  </div>


</div>
